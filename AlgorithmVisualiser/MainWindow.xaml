<Window x:Class="AlgorithmVisualiser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlgorithmVisualiser"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <!-- Main Window -->
    <Grid x:Name="MainPage" Background="#AAAAAA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- Stack panel to store dynamically generated buttons -->
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20, 0, 20, 0">
            <Label HorizontalAlignment="Center" VerticalAlignment="Top">Modes</Label>
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center"  x:Name="ModesContainer" Margin="20,0,20,0">
                <!-- Dynamic buttons get appended here -->
            </StackPanel> 
        </StackPanel>
        
        <!-- Frame for loaded sorter page -->
        <Frame Background="#888888" Grid.Column="1" x:Name="PageContent" NavigationUIVisibility="Hidden">
            
        </Frame>
    </Grid>
</Window>
